<%= simple_form_for(product) do |f| %>
  <%= f.input :name %>
  <%= f.input :price, in: 1.0..20.0, step: 0.5 %>
  <%= f.input :description %>
  <%= f.input :estimated_delivery, in: 0..15, input_html: { min: '0', max: '15' }%>
  <%= f.input :photo, as: :file %>
  <%= f.submit 'Salvar', class:'btn btn-primary mt-2' %>
<% end %>

